{
    "name": "materialist-uci",
    "version": "1.0.0",
    "description": "uci chess engine with no conception of position",
    "main": "main.js",
    "repository": "https://github.com/ColTo632/materialist-uci",
    "scripts": {
        "test": "env TS_NODE_COMPILER_OPTIONS='{\"module\": \"commonjs\" }' mocha -r ts-node/register 'tests/**/*.ts'",
        "build": "npm run test && tsc && pkg -t host dist/main.js",
        "start": "npm run build && main.exe"
    },
    "author": "Colin Topper",
    "license": "MIT",
    "dependencies": {
        "typescript": "^4.1.3"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{js,ts}": [
            "eslint --fix",
            "tsc --strict --target ESNext --noEmit"
        ]
    },
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^4.10.0",
        "@typescript-eslint/parser": "^4.10.0",
        "eslint": "^7.16.0",
        "eslint-config-prettier": "^7.1.0",
        "eslint-plugin-prettier": "^3.3.0",
        "husky": "^4.3.6",
        "lint-staged": "^10.5.3",
        "prettier": "^2.2.1",
        "@types/chai": "^4.2.14",
        "@types/mocha": "^8.2.0",
        "chai": "^4.2.0",
        "mocha": "^8.2.1",
        "ts-node": "^9.1.1"
    }
}
